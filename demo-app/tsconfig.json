{
  "compilerOptions": {
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom", "es2017", "es2018", "es2018", "es2020"],
      "sourceMap": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "baseUrl": "./src/",
      "skipLibCheck": true,
      "noEmit": true,
      "alwaysStrict": true
  },
  "include": [
      "./src/**/*"
  ]
}